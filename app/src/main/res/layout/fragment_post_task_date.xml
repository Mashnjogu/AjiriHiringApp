<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostTaskFragmentDate">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="348dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:icon="@drawable/ic_baseline_date_range_24"
        android:text="Choose your task date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />


    <Button
        android:id="@+id/time_btn"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_marginTop="120dp"
        android:text="Choose task time"
        app:icon="@drawable/ic_baseline_schedule_24"
        app:layout_constraintEnd_toEndOf="@+id/date_btn"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/date_btn"
        app:layout_constraintTop_toBottomOf="@+id/date_btn" />

    <Button
        android:id="@+id/save_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/montserrat_lightitalic"
        android:text="What time do you want to do your tasi"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_time"
        android:layout_width="348dp"
        android:layout_height="65dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:text="Selected Time"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>