<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/add_task_img"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/cleaning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_task_txt"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:text="Cleaning"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/add_task_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_task_img"
        app:layout_constraintTop_toBottomOf="@+id/add_task_img" />

</androidx.constraintlayout.widget.ConstraintLayout>